<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9ACAF1">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_x="135dp"
        android:layout_y="101dp"
        android:text="USER"
        android:textSize="60dp" />

    <TextView
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_x="143dp"
        android:layout_y="315dp"
        android:background="@drawable/text2"
        android:backgroundTint="@color/white"
        android:text=""
        android:textColor="@color/black"
        android:textColorHint="#808080" />

    <Spinner
        android:id="@+id/user_start"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_x="200dp"
        android:layout_y="320dp"
        android:background="@drawable/t_login"
        android:backgroundTint="@color/my"
        android:gravity="center"
        android:textAlignment="center"
        android:entries="@array/node"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_x="33dp"
        android:layout_y="315dp"
        android:background="@drawable/text1"
        android:backgroundTint="@color/white"
        android:textColorHint="#808080"
        android:text="    출발지  |"
        android:gravity="fill_vertical"
        android:textSize="20dp"
        android:textColor="@color/black"/>


    <TextView
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_x="143dp"
        android:layout_y="380dp"
        android:background="@drawable/text2"
        android:backgroundTint="@color/white"
        android:text=""
        android:textColor="@color/black"
        android:textColorHint="#808080" />
    <TextView
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_x="33dp"
        android:layout_y="380dp"
        android:background="@drawable/text1"
        android:backgroundTint="@color/white"
        android:textColorHint="#808080"
        android:text="    도착지  |"
        android:gravity="fill_vertical"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <Spinner
        android:id="@+id/user_end"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_x="200dp"
        android:layout_y="385dp"
        android:background="@drawable/t_login"
        android:backgroundTint="@color/my"
        android:gravity="center"
        android:textAlignment="center"
        android:entries="@array/node"
        android:spinnerMode="dropdown" />

    <EditText
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_x="33dp"
        android:layout_y="445dp"
        android:background="@drawable/text1"
        android:backgroundTint="@color/white"
        android:textColorHint="#808080"
        android:text="    시간설정  |"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/s_time"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_x="143dp"
        android:layout_y="445dp"
        android:background="@drawable/text2"
        android:backgroundTint="@color/white"
        android:text=""
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textColorHint="#808080"/>

    <Button
        android:id="@+id/make_ok"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_x="131dp"
        android:layout_y="548dp"
        android:background="@drawable/btn_s"
        android:backgroundTint="#283680"
        android:text="등록"
        android:textAllCaps="false"
        android:textSize="15dp"
        app:backgroundTint="@android:color/holo_blue_dark" />
</AbsoluteLayout>